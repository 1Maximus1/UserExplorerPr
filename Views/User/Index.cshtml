@{
    string message = ViewData["Message"] as string ?? "No data available.";
    string color = ViewData["Color"] as string ?? "black";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Info</title>
    <style>
        body {
            color: @color;
            font-family: Arial, sans-serif;
        }
    </style>
</head>
<body>
    <h1>User Information</h1>
    <p>@message</p>
</body>
</html>
